
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


@model Project_Sem3.Models.ContactUs
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<div class="site-wrap">

        <div class="bg-light py-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 mb-0">
                        <a href="index.html">Home</a> <span class="mx-2 mb-0">/</span>
                        <strong class="text-black">Contact</strong>
                    </div>
                </div>
            </div>
        </div>

        <div class="site-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="h3 mb-5 text-black">Get In Touch</h2>
                    </div>
                    <div class="col-md-12">

                    <form asp-controller="ContactUs" asp-action="Index" method="post">

                            <div class="p-3 p-lg-5 border">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="c_email" class="text-black">FullName</label>
                                    <input type="text" class="form-control"  asp-for="FullName" placeholder="">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <label for="c_email" class="text-black">Email </label>
                                    <input type="email" class="form-control" asp-for="EmailAddress" placeholder="">
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                    </div>
                                </div>
                             
                             <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="c_email" class="text-black">CompanyName </label>
                                    <input type="text" class="form-control" asp-for="CompanyName" placeholder="">
                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="c_email" class="text-black">Address </label>
                                    <input type="text" class="form-control" asp-for="Address" placeholder="">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="c_email" class="text-black">City </label>
                                    <input type="text" class="form-control" asp-for="City" placeholder="">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="c_email" class="text-black">State </label>
                                    <input type="text" class="form-control" asp-for="State" placeholder="">
                                    <span asp-validation-for="State" class="text-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="c_email" class="text-black">PostalCode </label>
                                    <input type="text" class="form-control" asp-for="PostalCode" placeholder="">
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <label for="c_email" class="text-black">Country</label>
                                    <input type="text" class="form-control" asp-for="Country" placeholder="">
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>
                            
                                <div class="form-group row">
                                    <div class="col-md-12">
                                    <label for="c_subject" class="text-black">Phone </label>
                                    <input type="number" class="form-control" asp-for="Phone">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <label for="c_message" class="text-black">Comments </label>
                                    <textarea asp-for="Comments" cols="30" rows="7" class="form-control"></textarea>
                                    <span asp-validation-for="Comments" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                        <input type="submit" class="btn btn-primary btn-lg btn-block" value="Send Message">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>



        <div class="site-section bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h2 class="text-black mb-4">Offices</h2>
                    </div>
                    <div class="col-lg-4">
                        <div class="p-4 bg-white mb-3 rounded">
                            <span class="d-block text-black h6 text-uppercase">New York</span>
                            <p class="mb-0">203 Fake St. Mountain View, San Francisco, California, USA</p>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="p-4 bg-white mb-3 rounded">
                            <span class="d-block text-black h6 text-uppercase">London</span>
                            <p class="mb-0">203 Fake St. Mountain View, San Francisco, California, USA</p>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="p-4 bg-white mb-3 rounded">
                            <span class="d-block text-black h6 text-uppercase">Canada</span>
                            <p class="mb-0">203 Fake St. Mountain View, San Francisco, California, USA</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

